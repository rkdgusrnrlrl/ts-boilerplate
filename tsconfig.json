{
  "compilerOptions": {
    "moduleResolution": "node",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es6",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "tests/*": [
        "tests/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test/**/*",
    "**/*.test.ts"
  ]
}